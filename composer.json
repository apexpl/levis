{
    "name": "apex/levis",
    "description": "Small, light weight framework allowing quick deployment.",
    "type": "project",
    "homepage": "https://apexpl.io",
    "authors": [
        {
            "name": "Matt Dizak", 
            "email": "matt@apexpl.io"
        }
    ], 
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "apex/levis-app": "^1.0",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",  
            "Views\\": "views/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
